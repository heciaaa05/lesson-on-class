#include <bits/stdc++.h>

using namespace std;


struct sinhvien {
    char masv[10];
    char hoten[30];
    char diachi[20];
    float diemTB;
};


struct Node {
    sinhvien infor;
    Node* next;
};

typedef Node* TRO;

//nhap 1 sv
void nhapThongTin(sinhvien &sv) {
    cout << "Nhap ma sv: ";
    cin.ignore();
    cin.getline(sv.masv, 10);

    cout << "Nhap ho ten: ";
    cin.getline(sv.hoten, 30);

    cout << "Nhap dia chi: ";
    cin.getline(sv.diachi, 20);

    cout << "Nhap diem TB: ";
    cin >> sv.diemTB;
}

// nhap ds
void nhapDS(TRO &L) {
    sinhvien x;
    TRO Q = NULL, P;
    int n;

    cout << "Nhap so luong sinh vien: ";
    cin >> n;

    for (int i = 0; i < n; ++i) {
        cout << "\nNhap sinh vien thu " << i + 1 << ":\n";
        nhapThongTin(x);

        P = new Node;
        P->infor = x;
        P->next = NULL;

        if (L == NULL) {
            L = P;
        } else {
            Q->next = P;
        }
        Q = P;
    }
}

// xuat ds
void xuat(TRO L) {
    cout << left << setw(10) << "Ma SV"
         << setw(25) << "Ho ten"
         << setw(20) << "Dia chi"
         << setw(10) << "Diem TB" << endl;

    TRO Q = L;
    while (Q != NULL) {
        sinhvien x = Q->infor;
        cout << left << setw(10) << x.masv
             << setw(25) << x.hoten
             << setw(20) << x.diachi
             << setw(10) << fixed << setprecision(2) << x.diemTB << endl;
        Q = Q->next;
    }
}

//count list

int countList(TRO &L){
    TRO Q = L;
    int dem=0;
    while ( Q != NULL){
        if (strcmp(Q->infor.hoten, "lan")==0){
            dem++;
        }
        Q=Q->next;
    }
    return dem;
}

//tinh diem trung binh

float diemTB(TRO &L){
    TRO Q = L;
    float T=0;
    int dem=0;
    while (Q!= NULL){
        T += Q->infor.diemTB;
        dem++;
        Q=Q->next;
    }
    if (dem = 0) return 0.0;
    float TB = T/dem;
    return TB;

}

// sap xep danh sach theo diem trung binh (bubleSort)
void listSort(TRO &L){
  bool swapped;
  TRO P,Q;
  do{
    swapped = false;
    P = L;
    while (P->next != Q){
        //ktra dkien swap
        if (P->infor.diemTB > P->next->infor.diemTB){
            //swap
            sinhvien temp = P->infor;
            P->infor = P->next->infor;
            P->next->infor = temp;
            swapped = true;
        }
        P= P->next;
    }
    Q=P;
  }  while (swapped);
}
int main(){
    TRO L = NULL;
    TRO Q;
    //nhap
    cout << "=== Nhap danh sach sinh vien ===" << endl;
    nhapDS(L);
    //xuat
    cout << "\n=== Danh sach sinh vien vua nhap ===" << endl;
    xuat(L);
    cout<<endl;
    //so sv ten ...
    cout<<"so sv ten LAN:"<<countList(L)<<endl;
    //diem tb
    float TB = diemTB(L);
    cout<<"diem trung binh"<<TB<<endl;
    //sap xep ds
    listSort(L);
    xuat(L);

}
